
@{
    ViewBag.Title = "WildForm";
}

<div class="row">
    <div class="col col-lg-12">
        <img src="~/Content/materialize/images/12.png" class="center-align responsive-img"> <!-- random image -->
        <div class="caption center-align"></div>
    </div>
</div>

<div>

    <div class="row">
        <div class="col s12 m6 l6">
            <div class="card indigo darken-4">
                <div class="card-content white-text">
                    <span class="card-title">Wild n' Out</span>
                    <p>
                        Conventional improvisational comedy games are injected with a hip-hop flavor as host Nick Cannon and celebrity guest stars lead teams of comics in a series of comedy challenges.
                    </p>
                </div>
            </div>

        </div>


        <div class="right-align">
            <h5 class="left-align">Please Fill out this Form!</h5>
            <form class="col s12 m6 l6 left-align" action="InsertWild">
                <div class="input-field">
                    <input placeholder="800 Number" id="WschoolId" type="text" class="validate" name="WschoolId" />

                </div>
                <div class="input-field">
                    <input placeholder="First Name" id="WfirstName" type="text" class="validate" name="WfirstName" />

                </div>
                <div class="input-field">
                    <input placeholder="Last Name" id="WlastName" type="text" class="validate" name="WlastName" />

                </div>
                <div class="input-field">
                    <input placeholder="Major" id="WMajor" type="text" class="validate" name="WMajor" />

                </div>
                <button class="btn waves-effect waves-light" type="Reset" value="Reset" name="action" style="right: 20px;">Reset</button>

                <button class="btn waves-effect waves-light" type="Submit" value="Submit" name="action">Send</button>
            </form>
        </div>
    </div>
</div>

